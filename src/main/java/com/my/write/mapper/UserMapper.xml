<?xml version="1.0" encoding="UTF-8"?> 

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="UserMapper">
	<!-- 회원 가입 탈퇴 -->
	<delete id="delete" parameterType="String">
		DELETE FROM `user`
		WHERE user_code = #{user_code}
	</delete>

	<!-- 유저 전체 찾기 -->
	<select id="findAll" parameterType="HashMap" resultType="User">
		SELECT * FROM `user`
		LIMIT #{start}, #{count}
	</select>

	<!-- 유저 idx로 찾기 -->
	<select id="findByIdx" parameterType="int" resultType="User">
		SELECT 
			*
		FROM `user`
		WHERE user_idx = #{user_idx}
	</select>

	<!-- 유저 수정 -->
	<update id="update" parameterType="User">
		UPDATE `user`
		SET
			nick = #{nick}, 
			address = #{address},
			birth_date = #{birth_date}
		WHERE user_code = #{user_code}
	</update>

	<!-- 유저 아이디 찾기 -->
	<select id="findById" parameterType="int" resultType="User">
		SELECT 
			*
			FROM `user`
			WHERE user_idx = #{user_idx}
	</select>	


	<!-- 로그인 찾기 -->
	<select id = "getByIdAndPw" parameterType="User" resultType="User">
		select * from `user`
		where id = #{id} and pw = MD5(#{pw})
	
	</select>
	
	<!-- 아이디 찾기 -->
	<select id="getById" parameterType="String" resultType="User">
		SELECT 
			*
		FROM `user`
		WHERE id = #{id}
	</select>

	<!-- 닉네임 찾기 -->
	<select id="getByNick" parameterType="String" resultType="User">
		SELECT 
			*
		FROM `user`
		WHERE nick = #{nick}
	</select>
	
	<!-- 유저코드 찾기 -->
	<select id = "findByCode" parameterType="String" resultType="User">
		select * from `user`
		<!--  -->
		where user_code=#{user_code}	
	
	</select>
	
	<!-- 전체 유저 리스트  -->
	<select id="findByAll" resultType="User">
      	select * from `user`
   	
   		order by user_idx
   	</select>

	<!-- 회원 추가  -->
	<insert id="save" parameterType="User">
		insert into `user`
		(
			user_idx,
			user_code,
			id,
			pw,
			nick,
			address,
			birth_date,
			created_date
		)
		values
		(	
			#{user_idx},	
			#{user_code},
			#{id},
			MD5(#{pw}),
			#{nick},
			#{address},
			#{birth_date},
			sysdate()
		)
	
	</insert>
	
	
	</mapper>